{
  "buildCommand": "cd frontend/tauri-app && npm ci && npm run build",
  "outputDirectory": "frontend/tauri-app/dist",
  "framework": "vite",
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "frontend/tauri-app/dist/$1" }
  ]
}

